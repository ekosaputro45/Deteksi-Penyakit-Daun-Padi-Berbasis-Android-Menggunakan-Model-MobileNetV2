<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center_horizontal"
    android:background="@android:color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#E8EAF6"> <!-- A light blue color -->

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_myplaces" 
            app:tint="#5865F2"/> 

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Registrasi Sukses!"
        android:textColor="#5865F2"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Akunmu telah Berhasil Dibuat"
        android:textColor="@android:color/darker_gray" />

    <Button
        android:id="@+id/btnGoToHome"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#5865F2"
        android:text="Masuk Dulu"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:cornerRadius="28dp" />

</LinearLayout>