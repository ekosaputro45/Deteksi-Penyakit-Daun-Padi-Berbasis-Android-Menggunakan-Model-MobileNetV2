<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- Content area (keeps padding), bottom navbar is outside this so it can be full-width -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Top Bar -->
        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/black" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvProductScanner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#E8F5E9"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivMenu">

            <ImageView
                android:id="@+id/imgUploadPadi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="Pilih gambar daun padi"
                android:scaleType="centerInside"
                android:src="@drawable/upload_daun_padi" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bottom navbar: full width and pinned to bottom -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottomNavCard"
        android:layout_width="0dp"
        android:layout_height="104dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/llBottomNavContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <include
                android:id="@+id/bottomNavigationBar"
                layout="@layout/bottom_navigation_bar" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Half shadow under the center FAB (drawn behind it) -->
    <View
        android:id="@+id/fabCenterShadow"
        android:layout_width="72dp"
        android:layout_height="24dp"
        android:background="@drawable/fab_shadow_half"
        android:translationY="26dp"
        app:layout_constraintTop_toTopOf="@id/fabCenterAction"
        app:layout_constraintBottom_toBottomOf="@id/fabCenterAction"
        app:layout_constraintStart_toStartOf="@id/fabCenterAction"
        app:layout_constraintEnd_toEndOf="@id/fabCenterAction" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCenterAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:translationY="10dp"
        android:contentDescription="Camera"
        android:src="@drawable/ic_ai_assistant"
        android:visibility="visible"
        app:backgroundTint="#F05A7E"
        app:elevation="12dp"
        app:layout_constraintBottom_toBottomOf="@id/bottomNavCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:maxImageSize="26dp"
        app:pressedTranslationZ="12dp"
        app:tint="@android:color/white"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
