<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">

    <!-- Wide + short oval to simulate a half-shadow under the FAB -->
    <size
        android:width="72dp"
        android:height="24dp" />

    <!-- Radial gradient: darker near top-center, fades outwards -->
    <gradient
        android:type="radial"
        android:centerX="0.5"
        android:centerY="0.0"
        android:gradientRadius="36dp"
        android:centerColor="#33000000"
        android:endColor="#00000000" />
</shape>
