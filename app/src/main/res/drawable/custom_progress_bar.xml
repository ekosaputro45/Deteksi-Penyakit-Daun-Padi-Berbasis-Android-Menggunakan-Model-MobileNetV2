<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Definisikan bentuk untuk Latar Belakang ProgressBar -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <!-- Atur sudut menjadi bulat -->
            <corners android:radius="10dp" />
            <!-- Atur warna latar belakang (biasanya abu-abu muda) -->
            <solid android:color="#E0E0E0" />
        </shape>
    </item>

    <!-- Definisikan bentuk untuk Progres yang berjalan -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <!-- Atur sudut menjadi bulat, samakan dengan background -->
                <corners android:radius="10dp" />
                <!-- Warna progres akan diambil dari progressTint di layout Anda -->
                <solid android:color="#5865F2" />
            </shape>
        </clip>
    </item>

</layer-list>